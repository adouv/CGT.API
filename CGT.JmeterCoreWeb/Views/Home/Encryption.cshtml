@{
    ViewData["Title"] = "Encryption";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>


<div class="row">
    <h3>字符串</h3>
    <textarea name="content" id="content" placeholder="需要加密的字符串" style="width:800px;height:300px;"></textarea>
</div>
<div class="row">
    <h3>加密字符串</h3>
    <textarea name="encryptioncontent" id="encryptioncontent" placeholder="加密后的字符串" style="width:800px;height:300px;"></textarea>
</div>
<div class="row">
    <input type="button" name="submit" value="提交" onclick="submit()" />
</div>
<script type="text/javascript">
    function submit() {
        $.post(
            '/Home/EncryptionStr',
            {
                'JsonStr': $("#content").val()
            },
            function (data) {
                debugger;
                if (data.isSuccess) {
                    $("#encryptioncontent").val(data.data);
                }
                else {
                    alert(data.massage);
                }
            });

    }
</script>